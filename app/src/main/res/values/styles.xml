<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffc304</item>
        <item name="colorPrimaryDark">#53B9c6</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>

    </style>


    <style name="SpinnerTheme">
       <!-- <item name="android:textColor">#333333</item>-->
        <item name="android:fontFamily">@font/montserrat_regular</item>
       <!-- <item name="android:textStyle">bold</item>-->
    </style>
    <style name="TextApppp">
        <item name="android:textColor">@color/colorpink</item>
        <item name="android:textSize">12sp</item>
        ...
    </style>
    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_round</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CustomDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#53B9c6</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerMode" tools:targetApi="lollipop">spinner</item>
    </style>
    <dimen name="design_navigation_icon_size" tools:override="true">18dp</dimen>
    <style name="Style_TextView">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#545870</item>
        <item name="colorPrimaryDark">#545870</item>
        <item name="colorAccent">#53B9c6</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextInputEditText" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#545870</item>
        <item name="colorPrimaryDark">#545870</item>
        <item name="colorAccent">#fff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="NoPopupAnimation" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupAnimationStyle">@null</item>
    </style>
    <style name="MyPopupOtherStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorDarkBlue</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorpink</item>
    </style>
    <style name="MyPopupStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorDarkBlue</item>
        <!-- Used for the background -->
        <item name="android:background">#fff</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#fff</item>
        <item name="colorPrimary">#fff</item>
    </style>
    <style name="CalenderViewCustom1" parent="Theme.AppCompat">
        <item name="colorAccent">@color/textBackground</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/colorDarkBlue</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorpink</item>
    </style>
    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>
