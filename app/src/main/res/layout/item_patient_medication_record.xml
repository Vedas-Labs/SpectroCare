<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blackboarder"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_doc_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="7dp"
                    android:scaleType="center"
                    android:src="@drawable/drug"></ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thyroxin"
                        android:visibility="gone"
                        android:layout_toRightOf="@id/img_doc_pic"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="gone">
                      <TextView
                          android:id="@+id/id"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Medication ID: "
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="10dp"
                          android:textSize="14sp"
                          android:fontFamily="@font/montserrat_semi_bold"/>
                      <TextView
                          android:id="@+id/idtext"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="MID1234"
                          android:layout_toRightOf="@id/id"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="10dp"
                          android:textSize="14sp"
                          android:fontFamily="@font/montserrat_regular"/>
                  </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medication list: "
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_semi_bold"/>
                        <TextView
                            android:id="@+id/listtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MID1234"
                            android:singleLine="true"
                            android:layout_toRightOf="@id/list"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_semi_bold"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prescribed on: "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_semi_bold"/>
                        <TextView
                            android:id="@+id/prestext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MID1234"
                            android:layout_toRightOf="@id/pres"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_regular"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/doctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor Name: "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_semi_bold"/>
                        <TextView
                            android:id="@+id/doctortext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MID1234"
                            android:layout_toRightOf="@id/doctor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_regular"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_boarder"
                android:backgroundTint="@color/colorOrange"
                android:layout_below="@id/layout"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="View"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>