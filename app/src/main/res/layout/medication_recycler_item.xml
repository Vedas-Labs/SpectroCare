<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="0dp"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:id="@+id/rl"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/vaccine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medication ID"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorblack"
                    />
                <TextView
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vaccine_title"
                    android:text="jjjjjj"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>
                   <!-- android:layout_toRightOf="@id/vaccine_title"/>-->
                <TextView
                    android:id="@+id/vaccine_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription given by :"
                    android:layout_below="@id/mid"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorblack"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/vaccine_date"
                    android:text="hahalhah;lfhl"
                    android:layout_below="@id/mid"
                    android:textSize="16sp"
                    />
            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/last"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_layout"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textSize="13sp"
                android:text="Last update on 2020/02/31 03:42 AM"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/attachlayout"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@id/last"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp">
            <ImageView
                android:id="@+id/attach_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_delete" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attachment" />
                <TextView
                    android:id="@+id/file1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorblack"
                    android:textSize="13sp"
                    android:text="dsdsdssd.pdf"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/attach1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attachment" />
                <TextView
                    android:id="@+id/file2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorblack"
                    android:textSize="13sp"
                    android:text="dsdsdssd.pdf"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last"
            android:id="@+id/l1"
            android:layout_alignParentRight="true"
            android:weightSum="4">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_edit" />
            <ImageView
                android:id="@+id/img_attach"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_attachment" />
            <ImageView
                android:id="@+id/img_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_eye" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>