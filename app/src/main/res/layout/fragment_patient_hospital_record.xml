<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_fragment.PatientHospitalRecordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_disease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/edt_surgery_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="170 cm"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    />


                <TextView
                    android:id="@+id/text_symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:layout_below="@id/text_disease"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/txt_weigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 kg"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/text_disease"
                    />
                <TextView
                    android:id="@+id/txt_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorDarkBlue"
                    android:layout_below="@id/txt_weigh"
                    />
                <TextView
                    android:id="@+id/text_waistline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waistline"
                    android:layout_below="@id/txt_line"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/txt_waist_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39 inch"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_line"
                    />
                <TextView
                    android:id="@+id/txt_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorDarkBlue"
                    android:layout_below="@id/txt_waist_line"
                    />
                <TextView
                    android:id="@+id/text_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:layout_below="@id/txt_line1"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/txt_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_line1"
                    />
                <TextView
                    android:id="@+id/txt_line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorDarkBlue"
                    android:layout_below="@id/txt_bmi"
                    />
                <TextView
                    android:id="@+id/text_bmr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMR"
                    android:layout_below="@id/txt_line2"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/txt_bmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_line2"
                    />
                <TextView
                    android:id="@+id/txt_line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorDarkBlue"
                    android:layout_below="@id/txt_bmr"
                    />
                <TextView
                    android:id="@+id/text_blood_pre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Pressure"
                    android:layout_below="@id/txt_line3"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <TextView
                    android:id="@+id/txt_blood_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90/80 mmHg"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_line3"
                    />
                <TextView
                    android:id="@+id/txt_line4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorDarkBlue"
                    android:layout_below="@id/txt_blood_pre"
                    />
                <TextView
                    android:id="@+id/txt_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Physician's comment"
                    android:layout_below="@id/txt_line4"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <EditText
                    android:id="@+id/edt_notes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_txt_background"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/txt_notes"
                    />

                <Button
                    android:id="@+id/btn_save_changes"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:text="Save changes"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:layout_margin="20dp"
                    android:layout_below="@id/edt_notes"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_bck_color"
                    />
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>