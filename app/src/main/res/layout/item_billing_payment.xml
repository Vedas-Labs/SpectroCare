<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/edt_txt_background">
    <TextView
        android:id="@+id/txt_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May 11"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/txt_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00 AM"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@id/txt_month"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/txt_blue_line"
        android:layout_width="3dp"
        android:layout_height="62dp"
        android:background="@color/colorpink"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/txt_month"
        />
    <TextView
        android:id="@+id/txt_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice # 01234"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/txt_blue_line"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/txt_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@id/txt_invoice"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreen"
        android:layout_toRightOf="@id/txt_blue_line"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="$50"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:src="@drawable/right_1"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
</RelativeLayout>