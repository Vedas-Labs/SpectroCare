<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PatientModule.PatientMedicalHistoryActivity">
    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_background"/>
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textSize="16sp"
            android:layout_toRightOf="@id/img_back_arrow"
            android:layout_margin="15dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/colorWhite"
           />
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"/>

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:tabMode="scrollable"
        android:layout_below="@+id/toolbar_layout"
        app:tabIndicatorColor="@color/colorOrange"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@color/colorDarkBlue"
        android:background="@color/colorBottomSheetGrey"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/patient_view_pager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tab_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_layout">
        <TextView
            android:id="@+id/txt_consultation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorLightGrey"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Category"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_members"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="3"
            android:layout_below="@id/txt_consultation">
            <androidx.cardview.widget.CardView
                android:id="@+id/diagnosis_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                >
                <RelativeLayout
                    android:id="@+id/diagnosis_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="25dp"
                        android:src="@drawable/doctors"/>
                    <TextView
                        android:id="@+id/txt_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Diagnosis"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:id="@+id/appointments"
                android:backgroundTint="#00000000"
               >
                <RelativeLayout
                    android:id="@+id/disease_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_disease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="25dp"
                        android:src="@drawable/disease"/>
                    <TextView
                        android:id="@+id/txt_disease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Diseases"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#00000000"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:id="@+id/layout_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="30dp"
                        android:src="@drawable/people"/>
                    <TextView
                        android:id="@+id/txt_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Family History"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_members2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="3"
            android:layout_below="@id/layout_members">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
               >
                <RelativeLayout
                    android:id="@+id/layout_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_allergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="25dp"
                        android:src="@drawable/allergy"/>
                    <TextView
                        android:id="@+id/txt_allergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Allergy"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:id="@+id/appointments1"
                android:backgroundTint="#00000000"
                >
                <RelativeLayout
                    android:id="@+id/layout_surgery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_surgery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="25dp"
                        android:src="@drawable/ic_surgery"/>
                    <TextView
                        android:id="@+id/txt_surgery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Surgery"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#00000000"
                android:layout_weight="1"
                android:background="@color/colorBackground">
                <RelativeLayout
                    android:id="@+id/layout_immunization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_green"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_immune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="30dp"
                        android:src="@drawable/immunaization"/>
                    <TextView
                        android:id="@+id/txt_immune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="15dp"
                        android:text="Immunizations"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/layout_members2"
            android:background="@color/colorLightGrey"
            android:layout_marginTop="10dp"
            android:id="@+id/layout_records"
            >
            <TextView
                android:id="@+id/txt_records"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/colorLightGrey"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Medical Records"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_length"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/txt_records"
                />

            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorpink"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Delete All"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                />


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medic_recycle_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/layout_records"/>
    </RelativeLayout>

</RelativeLayout>