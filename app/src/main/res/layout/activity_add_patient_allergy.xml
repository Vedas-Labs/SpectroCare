<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PatientModule.AddPatientAllergyActivity">
    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_background"/>
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Allergies"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_back_arrow"
            android:layout_margin="15dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_search_by"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorLightGrey"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar_layout"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Enter Allergies"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/txt_search_by"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/text_disease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of Allergy"
                    android:visibility="gone"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/text_disease"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:id="@+id/name"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/edt_type_of_allergy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edt_txt_background"
                        android:text=""
                        android:textSize="13dp"
                        android:textColor="@color/colorDarkBlue"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>
                <Spinner
                    android:id="@+id/spinner_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_disease"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:id="@+id/text_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allergy Name"
                    android:layout_below="@id/name"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="15dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rl"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_txt_background"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/recycler_view"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <EditText
                    android:id="@+id/edt_allergy_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_txt_background"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorDarkBlue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/text_start_date"
                    />
                <ImageView
                    android:id="@+id/img_calender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/text_start_date"/>
                <TextView
                    android:id="@+id/text_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:layout_below="@id/edt_allergy_name"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorpink"
                    />
                <EditText
                    android:id="@+id/edt_allergy_note"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/edt_txt_background"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:textColor="@color/colorDarkBlue"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/text_end_date"
                    />


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
    android:id="@+id/btn_save_changes"
    android:layout_width="180dp"
    android:layout_height="45dp"
    android:text="Save"
    android:textAllCaps="false"
    android:fontFamily="@font/montserrat_regular"
    android:layout_marginBottom="250dp"
    android:layout_alignParentBottom="true"
    android:textColor="@color/colorWhite"
    android:layout_centerHorizontal="true"
    android:background="@drawable/btn_bck_color"
    />
</RelativeLayout>