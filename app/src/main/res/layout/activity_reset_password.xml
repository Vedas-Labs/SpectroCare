<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_password"
    tools:context=".activities.ForgotActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/title_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:textColor="#53B9C6"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/title_forgot_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_forgot"
                android:text="Enter your new password"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="#3E454C"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@id/title_forgot_description"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="3dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColorHint="@color/colorDarkBlue"
                    android:background="@drawable/new_login_boarder"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/icon_feather_lock"
                        android:drawablePadding="15dp"
                        android:textColor="#53B9C6"
                        android:background="#00000000"
                        android:backgroundTint="#00000000"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textStyle="normal"
                        android:layout_margin="15dp"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:hint="@string/hit"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_conform_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/layout_password"
                    android:padding="3dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColorHint="@color/colorDarkBlue"
                    android:background="@drawable/new_login_boarder"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_conform_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/icon_feather_lock"
                        android:drawablePadding="15dp"
                        android:textColor="#53B9C6"
                        android:background="#00000000"
                        android:backgroundTint="#00000000"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textStyle="normal"
                        android:layout_margin="15dp"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:hint="@string/hi"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:id="@+id/visible"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_visibility"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/in_visible"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_visibility_off_black_24dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/img_visible"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_visibility"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:layout_below="@id/layout_password"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/img_in_visible"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_visibility_off_black_24dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/layout_password"
                    android:layout_alignParentRight="true"
                    />


                <Button
                    android:id="@+id/btn_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Done"
                    android:layout_marginTop="50dp"
                    android:textColor="#fff"
                    android:backgroundTint="#3E454C"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/new_login_boarder"
                    android:layout_below="@id/layout_conform_password"/>

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_ionic_ios_arrow_back"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>