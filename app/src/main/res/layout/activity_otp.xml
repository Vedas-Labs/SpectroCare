<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_password"
    tools:context=".activities.OtpActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textAllCaps="true"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textColor="#53B9C6"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorDarkBlue"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:text="Please enter the OTP code we sent to your email"/>
        <LinearLayout

            android:id="@+id/totalField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText

                android:cursorVisible="false"
                android:selectAllOnFocus="true"
                android:digits="0123456789"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/firstField"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_round"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:maxLength="1"/>
            <EditText

                android:gravity="center"
                android:textSize="16sp"
                android:cursorVisible="false"
                android:selectAllOnFocus="true"
                android:inputType="number"
                android:digits="0123456789"
                android:id="@+id/secondField"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_round"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:maxLength="1"/>

            <EditText

                android:gravity="center"
                android:textSize="16sp"
                android:cursorVisible="false"
                android:selectAllOnFocus="true"
                android:digits="0123456789"
                android:inputType="number"
                android:id="@+id/thirdFeild"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_round"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:maxLength="1"/>

            <EditText

                android:gravity="center"
                android:textSize="16sp"
                android:cursorVisible="false"
                android:selectAllOnFocus="true"
                android:digits="0123456789"
                android:inputType="number"
                android:id="@+id/fourthFiled"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_round"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:maxLength="1"/>

        </LinearLayout>
        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Done"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:backgroundTint="#3E454C"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/new_login_boarder"
            android:layout_below="@id/totalField"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_ionic_ios_arrow_back"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>