<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_servicename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorpink"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="LASIK"/>
        <TextView
            android:id="@+id/txt_summery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_below="@id/txt_servicename"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="LASIK is a laser eye procedure which treats short-sighted (myopia) and astigmatism. It takes only 5 minutes per eye and vision recovers within 24 hours"/>

    </RelativeLayout>
</RelativeLayout>