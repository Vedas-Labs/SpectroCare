                />
-->
            <TextView
                android:id="@+id/text_waistline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason for visit"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@id/txt_weigh"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="37dp"
                android:textColor="@color/colorpink"
                />
            <EditText
                android:id="@+id/txt_waist_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illness consultation"
                android:layout_marginLeft="37dp"
                android:focusable="false"
                android:paddingBottom="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/text_waistline"
                />
<!--
            <TextView
                android:id="@+id/txt_line1"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorDarkBlue"
                android:layout_below="@id/txt_waist_line"
                />
-->
            <TextView
                android:id="@+id/text_bmi"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illness/Conditions"
                android:layout_below="@id/txt_waist_line"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="37dp"
                android:textColor="@color/colorpink"
                />
            <EditText
                android:id="@+id/txt_bmi"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="Persistent Cough"
                android:layout_marginLeft="37dp"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:paddingBottom="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/text_bmi"
                />
