<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_fragment.PatientInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment Date/Time"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="37dp"
                android:textColor="@color/colorpink"
                />
            <EditText
                android:id="@+id/edt_surgery_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:focusable="false"
                android:paddingBottom="15dp"
                android:text="20th Tuesday, May 9:00 - 9:10 AM | 10 mins"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@id/text_disease"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                />

<!--
            <TextView
                android:id="@+id/txt_line0"
                android:layout_width="match_parent"
