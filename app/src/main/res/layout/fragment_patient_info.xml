                android:layout_marginRight="20dp"
                android:background="@color/colorDarkBlue"
                android:layout_below="@id/txt_blood_pre"
                />
-->
            <TextView
                android:id="@+id/txt_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:layout_below="@id/txt_blood_pre"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="37dp"
                android:textColor="@color/colorpink"
                />
            <EditText
                android:id="@+id/edt_notes"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="37dp"
                android:focusable="false"
                android:textSize="12sp"
                android:paddingBottom="15sp"
                android:fontFamily="@font/montserrat_regular"
                android:singleLine="false"
                android:text="Cough very frequently. Become serious during midnight"
                android:layout_marginRight="21dp"
                android:layout_below="@id/txt_notes"
                />
<!--
            <TextView
                android:id="@+id/txt_line5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@color/colorDarkBlue"
                android:layout_below="@id/edt_notes"
                />
-->
            <TextView
                android:id="@+id/text_disc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descriptions"
                android:layout_below="@id/edt_notes"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="37dp"
                android:textColor="@color/colorpink"
                />
