<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PatientModule.DoctorsActivity">
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/toolbar_layout">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="50dp"
              android:layout_below="@id/toolbar_layout">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:singleLine="true"
                   android:visibility="gone"
                   android:hint="search"
                   android:textSize="14sp"
                   android:fontFamily="@font/montserrat_regular"
                   android:padding="5dp"
                   android:drawableRight="@drawable/ic_search"
                   android:background="@drawable/edt_txt_background"
                   android:id="@+id/edt_search"/>
               <RelativeLayout
                   android:id="@+id/layout_search_by"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/edt_search"
                   >
                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorLightGrey"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Search by category"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/txt_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all"
                        android:layout_marginRight="15dp"
                        android:padding="2dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/colorpink"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorpink"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/txt_view_all"
                        android:layout_marginTop="10dp"/>


               </RelativeLayout>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/doctors_grid_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:scrollbars="none"
                   android:layout_margin="15dp"
                   android:layout_below="@id/layout_search_by"/>
               <RelativeLayout
                   android:id="@+id/txt_consultation"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/doctors_grid_view"
                   >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorLightGrey"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Search by Department"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/txt_all_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all"
                        android:layout_marginRight="15dp"
                        android:padding="2dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/colorpink"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorpink"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/txt_all_view"
                        android:layout_marginTop="10dp"/>

               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/layout_members1"
                   android:layout_margin="10dp"
                   android:layout_below="@id/txt_consultation">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dept_grid_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_margin="15dp"
                        />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/layout_members"
                   android:layout_margin="10dp"
                   android:visibility="gone"
                   android:weightSum="3"
                   android:layout_below="@id/txt_consultation">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/textBackground"
                        android:background="@color/textBackground">
                         <RelativeLayout
                             android:id="@+id/elderly_layout"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_margin="25dp"
                                  android:src="@drawable/kidney_1"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_alignParentBottom="true"
                                  android:paddingBottom="15dp"
                                  android:text="Elderly"
                                  android:textSize="10sp"
                                  android:fontFamily="@font/montserrat_semi_bold"/>

                         </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/textBackground"
                        android:background="@color/colorBackground">
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_margin="25dp"
                                  android:src="@drawable/cardiovascular_1"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_alignParentBottom="true"
                                  android:paddingBottom="15dp"
                                  android:text="Cardiology"
                                  android:textSize="10sp"
                                  android:fontFamily="@font/montserrat_semi_bold"/>

                         </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/textBackground"
                        android:layout_weight="1"
                        android:background="@color/colorBackground">
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_margin="25dp"
                                  android:src="@drawable/ent"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true"
                                  android:layout_alignParentBottom="true"
                                  android:paddingBottom="15dp"
                                  android:text="ENT"
                                  android:textSize="10sp"
                                  android:fontFamily="@font/montserrat_semi_bold"/>

                         </RelativeLayout>
                    </androidx.cardview.widget.CardView>

               </LinearLayout>
               <TextView
                   android:id="@+id/txt_latest_search"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:background="@color/colorLightGrey"
                   android:layout_below="@id/layout_members1"
                   android:layout_marginTop="10dp"
                   android:textSize="15sp"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:text="Latest search doctors"
                   android:paddingLeft="15dp"
                   android:gravity="center_vertical"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/latest_doc_list"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:scrollbars="none"
                   android:layout_margin="15dp"
                   android:layout_below="@id/txt_latest_search"/>



          </RelativeLayout>

     </ScrollView>
     <RelativeLayout
         android:id="@+id/toolbar_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <androidx.appcompat.widget.Toolbar
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@drawable/ic_background"/>
          <ImageView
              android:id="@+id/img_back_arrow"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/back"
              android:layout_centerVertical="true"
              android:padding="20dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Search Doctor"
              android:textSize="16sp"
              android:layout_margin="15dp"
              android:fontFamily="@font/montserrat_semi_bold"
              android:textColor="@color/colorWhite"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@id/img_back_arrow"/>

     </RelativeLayout>

</RelativeLayout>