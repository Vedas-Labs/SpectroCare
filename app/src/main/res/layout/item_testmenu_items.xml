<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:id="@+id/relativeLayout"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urine Routine"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_semi_bold"/>
                <TextView
                    android:id="@+id/txt_strip_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teststrip No: ertds"
                    android:textSize="10sp"
                    android:textColor="@color/colorGrey"
                    android:layout_below="@id/txt_name"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semi_bold"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/params"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Parameters"
                        android:layout_marginRight="20dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/downrl"
                        android:layout_alignParentRight="true">
                        <Button
                            android:layout_width="17dp"
                            android:layout_height="10dp"
                            android:textSize="14sp"
                            android:id="@+id/down"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/down_1"/>

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/relativeLayout"
        android:background="@color/colorLightGrey"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/rl_hiddenview"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/colorblack"
                android:text="Test Items"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/testitems"
                android:fontFamily="@font/montserrat_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/colorblack"
                android:text="Specimen Type"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/specimentype"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/colorblack"
                android:text="Specimen Quantity"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/qty"
                android:fontFamily="@font/montserrat_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/colorblack"
                android:text="Collection Notes"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/notes"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>