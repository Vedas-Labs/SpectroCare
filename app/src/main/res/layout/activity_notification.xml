<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientMoreModule.NotificationActivity">
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        tools:context=".MoreModule.NotificationActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorpink">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
               >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:id="@+id/back"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back"></ImageView>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:layout_toRightOf="@id/back"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Notification"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"></TextView>

            </RelativeLayout>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_boarder"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Notifications"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        />
                    <ToggleButton
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:scaleY="0.5"
                        android:layout_centerVertical="true"
                        android:scaleX="0.5"
                        android:background="@drawable/toggle_drawable"
                        android:textOff=""
                        android:textOn=""/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/li_all"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/btn_boarder"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment"
                            android:textSize="16dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            />
                        <ToggleButton
                            android:id="@+id/appointment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:scaleY="0.5"
                            android:scaleX="0.5"
                            android:background="@drawable/toggle_drawable"
                            android:textOff=""
                            android:textOn=""/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_boarder"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat &amp; Message"
                            android:textSize="16dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            />
                        <ToggleButton
                            android:id="@+id/chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:scaleY="0.5"
                            android:scaleX="0.5"
                            android:background="@drawable/toggle_drawable"
                            android:textOff=""
                            android:textOn=""/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/feedback"
                        android:background="@drawable/btn_boarder"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill &amp; Payment"
                            android:textSize="16dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            />

                        <ToggleButton
                            android:id="@+id/bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:scaleY="0.5"
                            android:scaleX="0.5"
                            android:background="@drawable/toggle_drawable"
                            android:textOff=""
                            android:textOn=""/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>