<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/header_pro_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            app:civ_border_color="@color/colorpink"
            android:scaleType="centerInside"
            android:src="@drawable/ic_profile3x" />
        <TextView
            android:id="@+id/header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/header_pro_pic"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#3E454C"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/header_txt2"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/header_txt"
            android:text=""
            android:textSize="16sp"
            android:textColor="#3E454C"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3E454C"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>