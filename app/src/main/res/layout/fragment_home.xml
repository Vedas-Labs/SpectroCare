<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".patient_fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/header_layout"
            android:background="@drawable/ic_background"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Today , 15 may"
                    />
                <TextView
                    android:id="@+id/txt_morning"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_date"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Good Morning,"/>

                <TextView
                    android:layout_below="@+id/txt_morning"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/txt_name"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_height="wrap_content"
                    android:text="Andrea Hu"/>
            </RelativeLayout>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/image"
                android:id="@+id/profileImg"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txt_consultation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorLightGrey"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Consultation"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_members"
                    android:layout_margin="10dp"
                    android:weightSum="3"
                    android:layout_below="@id/txt_consultation">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/textBackground"
                        android:background="@color/textBackground">
                        <RelativeLayout
                            android:id="@+id/doc_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="25dp"
                                android:src="@drawable/doctors"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="Doctors"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:id="@+id/appointments"
                        android:backgroundTint="@color/textBackground"
                        android:background="@color/colorBackground">
                        <RelativeLayout
                            android:id="@+id/appointment_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="25dp"
                                android:src="@drawable/ic_calendar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="My Appointments"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/textBackground"
                        android:layout_weight="1"
                        android:background="@color/colorBackground">
                        <RelativeLayout
                            android:id="@+id/layout_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/message"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="Message"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_medical_records"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorLightGrey"
                    android:layout_below="@id/layout_members"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Medical Records"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/patient_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_margin="15dp"
                    android:layout_below="@id/txt_medical_records"/>
                <TextView
                    android:id="@+id/txt_screening_test"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/patient_grid_view"
                    android:background="@color/colorLightGrey"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Screening Test"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_screening"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="80dp"
                    android:weightSum="3"
                    android:layout_below="@id/txt_screening_test">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/textBackground"
                        android:layout_weight="1"
                        android:background="@color/textBackground">
                        <RelativeLayout
                            android:id="@+id/layout_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/img_new_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="25dp"
                                android:src="@drawable/new_test"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="New Test"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/textBackground"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorBackground">
                        <RelativeLayout
                            android:id="@+id/layout_test_record"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/test_record"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="Test Record"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/textBackground"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorBackground">
                        <RelativeLayout
                            android:id="@+id/layout_device"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="25dp"
                                android:src="@drawable/drive"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="15dp"
                                android:text="My Devices"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat_semi_bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>
</FrameLayout>