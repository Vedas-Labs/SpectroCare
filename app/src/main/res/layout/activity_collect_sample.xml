<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientModule.BleScanningActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorpink">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">
                <RelativeLayout
                    android:layout_width="50dp"
                    android:id="@+id/back"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back"></ImageView>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Collect Sample"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"></TextView>

            </RelativeLayout>
        </RelativeLayout>
      <ScrollView
          android:layout_width="match_parent"
          android:layout_marginTop="80dp"
          android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ripplebg">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="20dp"
                      android:fontFamily="@font/montserrat_semi_bold"
                      android:textColor="@color/colorblack"
                      android:text="@string/samplecollect"/>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="20dp"
                      android:layout_height="50dp">
                      <RelativeLayout
                          android:layout_width="150dp"
                          android:background="@drawable/btn_boarder"
                          android:id="@+id/rl_one"
                          android:layout_height="40dp">
                          <TextView
                              android:id="@+id/txt_cal"
                              android:layout_width="wrap_content"
                              android:text="22/07/2020"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="5dp"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_height="wrap_content"/>
                          <Button
                              android:id="@+id/btn_calender"
                              android:layout_width="20dp"
                              android:background="@drawable/calendar_blue"
                              android:layout_alignParentRight="true"
                              android:layout_marginRight="20dp"
                              android:layout_centerVertical="true"
                              android:layout_height="20dp"/>
                      </RelativeLayout>
                      <RelativeLayout
                          android:id="@+id/layout_time"
                          android:layout_width="150dp"
                          android:background="@drawable/btn_boarder"
                          android:layout_marginLeft="20dp"
                          android:layout_toRightOf="@+id/rl_one"
                          android:layout_height="40dp">
                          <TextView
                              android:id="@+id/txt_time"
                              android:layout_width="wrap_content"
                              android:text="10:30 AM"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="5dp"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_height="wrap_content"/>
                          <Button
                              android:id="@+id/btn_clock"
                              android:layout_width="25dp"
                              android:background="@drawable/clock_blue"
                              android:layout_alignParentRight="true"
                              android:layout_marginRight="20dp"
                              android:layout_centerVertical="true"
                              android:layout_height="25dp"/>
                      </RelativeLayout>
                  </RelativeLayout>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:fontFamily="@font/montserrat_regular"
                      android:text="Fasting"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:textColor="@color/colorblack"
                      android:textSize="14dp"></TextView>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="15dp"
                      android:layout_height="wrap_content">
                      <RadioGroup
                          android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                          <RadioButton
                              android:id="@+id/radio_yes"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingLeft="25dp"
                              android:background="@null"
                              android:button="@drawable/radio_button_toggle"
                              android:checked="true"
                              android:scaleX="0.7"
                              android:scaleY="0.7"
                              android:textSize="18sp"
                              android:fontFamily="@font/montserrat_regular"
                              android:text="Yes"
                              />
                          <RadioButton
                              android:id="@+id/radio_no"
                              android:layout_width="wrap_content"
                              android:layout_marginLeft="50dp"
                              android:layout_height="wrap_content"
                              android:paddingLeft="25dp"
                              android:scaleX="0.7"
                              android:scaleY="0.7"
                              android:textSize="18sp"
                              android:background="@null"
                              android:button="@drawable/radio_button_toggle"
                              android:fontFamily="@font/montserrat_regular"
                              android:text="No"
                              />
                      </RadioGroup>
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="match_parent">
                      <Button
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:text="Test Instructions"
                          android:id="@+id/test"
                          android:textAllCaps="false"
                          android:textSize="16dp"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:textColor="@color/colorWhite"
                          android:background="@color/colorpink"
                          android:fontFamily="@font/montserrat_regular"
                          android:layout_centerHorizontal="true"
                          />
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="match_parent">
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Please follow below steps before starting to analyze the sample"
                          android:textSize="13dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:textColor="@color/colorblack"
                          android:fontFamily="@font/montserrat_regular"
                          android:layout_centerHorizontal="true"
                          />
                  </RelativeLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <LinearLayout
                          android:layout_width="50dp"
                          android:layout_marginTop="20dp"
                          android:layout_marginLeft="50dp"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                          <View
                              android:layout_width="1dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              android:background="@drawable/vertical_line" />
                          <Button
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:id="@+id/bl1"
                              android:textColor="@color/colorWhite"
                              android:background="@drawable/btn_bck_color"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                          <View
                              android:layout_width="1dp"
                              android:layout_height="40dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              android:background="@drawable/vertical_line" />
                          <Button
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:textColor="@color/colorWhite"
                              android:background="@drawable/btn_bck_color"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                          <View
                              android:layout_width="1dp"
                              android:layout_height="40dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              android:background="@drawable/vertical_line" />
                          <Button
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:textColor="@color/colorWhite"
                              android:background="@drawable/btn_bck_color"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                          <View
                              android:layout_width="1dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              android:background="@drawable/vertical_line" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_marginTop="20dp"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="40dp"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                          <View
                              android:layout_width="1dp"
                              android:layout_height="28dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              />
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Collect test samples with test strip"
                              android:textColor="@color/colorblack"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                          <View
                              android:layout_width="1dp"
                              android:layout_height="30dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              />
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:text="Put the test strip into strip holder"
                              android:textColor="@color/colorblack"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                          <View
                              android:layout_width="1dp"
                              android:layout_height="30dp"
                              android:layout_gravity="center"
                              android:layout_centerHorizontal="true"
                              />
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:text="Slightly push the test strip into strip holder"
                              android:textColor="@color/colorblack"
                              android:fontFamily="@font/montserrat_regular"
                              android:layout_centerHorizontal="true"
                              />
                    </LinearLayout>
                  </LinearLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:layout_marginTop="50dp"
                      android:layout_height="match_parent">
                      <Button
                          android:layout_width="250dp"
                          android:layout_height="wrap_content"
                          android:text="Start To Analyze"
                          android:id="@+id/start"
                          android:textColor="@color/colorWhite"
                          android:background="@drawable/btn_bck_color"
                          android:fontFamily="@font/montserrat_regular"
                          android:layout_centerHorizontal="true"
                          />
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:layout_marginTop="50dp"
                      android:layout_height="match_parent"/>
              </LinearLayout>
          </RelativeLayout>
      </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>