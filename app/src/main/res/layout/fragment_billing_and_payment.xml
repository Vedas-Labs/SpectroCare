<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorpink"
    tools:context=".patient_fragment.BillingAndPaymentFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            android:text="Billing and Payment"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="138dp"
                android:layout_height="158dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/btn_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Info"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:src="@drawable/card_1"
                    android:layout_marginTop="53dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa 3232"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginTop="88dp"/>
                <Button
                    android:id="@+id/btn_view"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:background="@drawable/edt_txt_background"
                    android:backgroundTint="@color/colorOrange"
                    android:layout_marginTop="117dp"
                    android:text="CHANGE"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="138dp"
                android:layout_height="158dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/btn_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next payment"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="51dp"
                    android:layout_height="29dp"
                    android:text="$ 50"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="53dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due on May 20"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginTop="88dp"/>
                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:background="@drawable/edt_txt_background"
                    android:backgroundTint="@color/colorOrange"
                    android:layout_marginTop="117dp"
                    android:text="PAY NOW"/>

            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total to pay"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="262dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/txt_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="52dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="262dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="50dp"
            />
        <RelativeLayout
            android:id="@+id/layout_disease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_below="@id/txt_cash"
            android:background="@drawable/btn_top_radius"
            android:backgroundTint="@color/colorWhite"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Details"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="50dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/billing_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="80dp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>