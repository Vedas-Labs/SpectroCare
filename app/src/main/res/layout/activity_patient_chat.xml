<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PatientModule.PatientChatActivity">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:background="@color/colorWhite"/>
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bac"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circular_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/img_back_arrow"
            android:src="@drawable/profile_1"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/circular_image"
            >
            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Viswanath Reddy"
                android:fontFamily="@font/montserrat_semi_bold"/>
            <TextView
                android:id="@+id/txt_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:fontFamily="@font/montserrat_regular"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDarkBlue"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chat_recycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_above="@id/layout_send"
    android:layout_marginBottom="5dp"
    android:layout_below="@id/toolbar_layout"
    />
    <RelativeLayout
        android:id="@+id/layout_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        >
        <EditText
            android:id="@+id/edt_sending_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Type message"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingRight="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edt_txt_background"

            />
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="5dp"
            >
            <VideoView
                android:id="@+id/vv1"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/img_play"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_play_circle"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/img_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_attachment"
            android:padding="10dp"
            android:layout_toLeftOf="@id/img_send"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

</RelativeLayout>