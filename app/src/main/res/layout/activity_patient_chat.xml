<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:screenReaderFocusable="true"
    tools:context=".PatientChat.PatientChatActivity">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="99dp"
            app:layout_collapseMode="pin"
            android:background="@color/colorWhite"/>
        <ImageView
            android:id="@+id/delete_all_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bac"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circular_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/img_back_arrow"
            android:src="@drawable/profile_1"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/circular_image"
            >
            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Viswanath Reddy"
                android:fontFamily="@font/montserrat_semi_bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_status"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle_color"
                    android:fontFamily="@font/montserrat_regular" />
                <TextView
                    android:id="@+id/txt_doc_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image"
                    android:layout_marginTop="3dp"
                    android:textSize="14dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="online"
                    android:textColor="@color/colorblack" />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDarkBlue"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chat_recycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:nestedScrollingEnabled="false"
    android:layout_above="@id/layout_send"
    android:layout_marginBottom="5dp"
    android:layout_below="@id/toolbar_layout"
    />
    <RelativeLayout
        android:id="@+id/layout_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/txt_typing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typing....."
            android:textColor="@color/colorOrange"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/montserrat_semi_bold"

            />
        <RelativeLayout
            android:id="@+id/selected_msg_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/txt_typing"
            android:visibility="gone"
            android:backgroundTint="@color/colorBottomSheetGrey"
            android:background="@drawable/button_radius"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:id="@+id/layout_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_below="@id/txt_selected_doc"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_photo"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/img_replay"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_baseline_cance"
                />
            <TextView
                android:id="@+id/txt_selected_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toLeftOf="@id/img_cancel"
                />
            <TextView
                android:id="@+id/txt_selected_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@id/txt_selected_doc"
                />

        </RelativeLayout>
        <EditText
            android:id="@+id/edt_sending_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Type message"
            android:paddingLeft="10dp"
            android:focusedByDefault="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textIsSelectable="true"
            android:adjustViewBounds= "true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/selected_msg_layout"
            android:fontFamily="@font/montserrat_regular"
            android:paddingRight="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edt_txt_background"

            />
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="5dp"
            >
            <VideoView
                android:id="@+id/vv1"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/img_play"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_play_circle"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:padding="10dp"
            android:layout_below="@id/selected_msg_layout"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_attachment"
            android:layout_below="@id/selected_msg_layout"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_toLeftOf="@id/img_send"
            android:layout_centerVertical="true"
            />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/img_send"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorOrange"
            />




    </RelativeLayout>

</RelativeLayout>