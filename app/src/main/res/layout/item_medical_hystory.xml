<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/medical_issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms :"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#094053"/>

        <TextView
            android:id="@+id/edt_medical_record_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#094053"
            android:layout_toRightOf="@id/medical_issue_title"
            android:text="jjjjjj" />
        <RelativeLayout
            android:id="@+id/create_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="#FFF"
                android:padding="5dp"
                android:text="Creator"
                android:textColor="#094053"
                android:weightSum="3">
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit" />


                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_eye" />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete" />



            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_below="@id/medical_issue_title"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/relationship_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current status :"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:textColor="#094053"/>
                <TextView
                    android:id="@+id/txt_current_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jjjjjj"
                    android:textColor="#094053"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="140dp"
                    android:layout_toRightOf="@id/relationship_title"/>

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/medical_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="hahalhah;lfhl"
            android:textColor="#094053"
            android:textSize="16sp"
            android:layout_below="@id/main_layout"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/medical_description"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_medicals"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="#53B9c6"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/record_button_boarder"
                    android:text="View medicals"/>
                <Button
                    android:id="@+id/btn_screenings"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="#53B9c6"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/record_button_boarder"
                    android:text="View Screenings"/>
                <Button
                    android:id="@+id/btn_surgicals"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    android:textColor="#53B9c6"
                    android:background="@drawable/record_button_boarder"
                    android:layout_weight="1"
                    android:text="View Surgicals"/>


            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>