<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt_illness_medication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illness Medication Id : "
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txt_illness_medication_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:layout_toRightOf="@id/txt_illness_medication_title"
            android:textStyle="bold"
            android:textColor="#000"/>

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_illness_medication_id"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:text="Name :"/>
            <TextView
                android:id="@+id/txt_medicine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:text="       "/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/dosage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/name_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:text="Dosage :"/>
            <TextView
                android:id="@+id/txt_medicine_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:text="Dosage of medicine"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dosage_layout"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:padding="5dp"
            android:textColor="#094053"
            android:weightSum="4">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_edit" />
            <ImageView
                android:id="@+id/img_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_eye" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_delete" />



        </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>