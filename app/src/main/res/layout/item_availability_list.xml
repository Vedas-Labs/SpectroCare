<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_mon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_week_name"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="21dp"
            android:backgroundTint="#F5F5F5"
            android:background="@drawable/btn_boarder"
            android:text="Mon"
            />
        <TextView
            android:id="@+id/txt_day_time"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="113dp"
            android:background="@drawable/btn_boarder"
            android:text="9:00-12:00"
            />
        <TextView
            android:id="@+id/txt_timings"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="221dp"
            android:background="@drawable/btn_boarder"
            android:text="15:00-17:00"
            />

    </RelativeLayout>


</RelativeLayout>